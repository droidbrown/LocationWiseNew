<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/black"
    xmlns:android="http://schemas.android.com/apk/res/android">

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <TextureView
        android:id="@+id/texture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_takepicture"
        android:layout_alignParentTop="true"/>
    <ImageView
    android:visibility="invisible"
    android:src="@drawable/ic_save_icon"
    android:layout_gravity="end|top"
    android:id="@+id/done"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"

    />
    <ImageView
        android:visibility="visible"
        android:src="@drawable/ic_cross_icon"
        android:layout_gravity="start|top"
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        />
    <RelativeLayout
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="bottom"
        >
        <ImageView
            android:id="@+id/btn_takepicture"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/camera_button"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true" />
        <TextView
            android:id="@+id/count_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="0"
            />
        <ImageView
            android:visibility="invisible"
            android:id="@+id/count"
            android:background="#80ffffff"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="bottom|start"
            android:layout_marginLeft="16dp"

            />

        <ImageView
            android:id="@+id/changecamera"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/flipcamerawhite"
            android:layout_marginRight="16dp"

            />
    </RelativeLayout>

</FrameLayout></android.support.design.widget.CoordinatorLayout>
