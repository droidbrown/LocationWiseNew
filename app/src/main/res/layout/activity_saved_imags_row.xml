
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginBottom="@dimen/size_5_dp"
    android:elevation="0dp"

    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/image"
        android:padding="2dp"
        android:layout_marginRight="@dimen/size_10_dp"
        android:layout_marginLeft="@dimen/size_10_dp"
        android:layout_marginTop="@dimen/size_5_dp"
        android:layout_marginBottom="@dimen/size_5_dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:orientation="horizontal"
        >
        <android.support.v7.widget.CardView
            android:layout_weight="0"
            app:cardElevation="@dimen/size_4_dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView

                android:elevation="@dimen/size_4_dp"
                android:scaleType="centerCrop"
                android:id="@+id/saved_image"
                android:src="@drawable/ic_cross_icon"
                android:layout_width="80dp"
                android:layout_height="80dp"

                />
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/size_10_dp"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/size_5_dp"
                android:text="Address Here"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12_sp" />

            <TextView
                android:textSize="@dimen/text_12_sp"
                android:textColor="@color/black"
                android:id="@+id/tap"
                android:padding="@dimen/size_5_dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/taptoviewimage"
                />
        </LinearLayout>

        <ImageView
            android:id="@+id/menu"
            android:layout_width="wrap_content"
            android:padding="@dimen/padding_10_dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_action_vertical_menu"
            />

    </LinearLayout>
    <View
        android:background="@color/appcolor"
        android:layout_gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp">

    </View>
</android.support.v7.widget.CardView>